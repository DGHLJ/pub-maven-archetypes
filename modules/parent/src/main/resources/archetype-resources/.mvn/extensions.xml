<?xml version="1.0" encoding="UTF-8"?>
<extensions>
  <extension>
    <!-- Alternative scheduler for build multi-module Maven projects.
      It allows the user to greatly improve the performance of mulit-module builds.
      
      @see http://takari.io/book/30-team-maven.html#takari-smart-builder
      @see https://github.com/takari/takari-local-repository
    -->
    <groupId>io.takari.maven</groupId>
    <artifactId>takari-smart-builder</artifactId>
    <version>0.4.0</version>
  </extension>
  <extension>
    <!-- Removes concurrent build restriction and enables safe concurrent use of the local repository. 
      This is especially useful for continuous integration systems that usually build multiple 
      projects in parallel and want to share the same local repository to reduce disk consumption.
      
      @see http://takari.io/book/30-team-maven.html#concurrent-safe-local-repository
      @see https://github.com/takari/takari-local-repository
    -->
    <groupId>io.takari.aether</groupId>
    <artifactId>takari-concurrent-localrepo</artifactId>
     <version>0.0.7</version>
  </extension>
</extensions>
